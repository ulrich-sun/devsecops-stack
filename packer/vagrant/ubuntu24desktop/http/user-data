    username: vagrant
    # Password hash for 'vagrant' (generated with: openssl passwd -6 vagrant)
    password: '$6$2ZQLDQbWuhgp.Flk$oIOBlsnzJIKMNiK1gh6VT0FR/QgT1jD9xdQJhmHWCtK5nwHEjk4ZHcSiALqty5sPpQ7A8XtiLhZY4sReXdqL3.'
